<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<ToolBar>
			<items>
				<Button onAction="#handleAddBookButtonAction" text="Add book" />
				<Separator visible="false" />
				<TextField fx:id="searchField" promptText="Search"
					onAction="#handleSearchFieldAction" />
			</items>
		</ToolBar>
		<TableView fx:id="booksTableView" VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="booksFilenameColumn" text="Filename" />
				<TableColumn fx:id="booksTitleColumn" text="Title" />
				<TableColumn fx:id="booksAuthorsColumn" text="Authors" />
				<TableColumn fx:id="booksStatusColumn" text="Status" />
				<TableColumn fx:id="booksLastModifiedDateTimeColumn" text="Date modified" />
				<TableColumn fx:id="booksBookmarksSizeColumn" text="Bookmarks" />
				<TableColumn fx:id="booksActionsColumn" sortable="false"
					text="Actions" minWidth="167" maxWidth="167" prefWidth="167"
					resizable="false" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</children>
</VBox>
